@model ICSI_UDIN.Models.ChangedNewPasswod
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm("ChangePassword", "Home"))
{
    <div class="container">
        <div id="loginformblock">
            <div class="card loginformRegistrn">

                @if (ViewBag.msg != null)
                {
                    if (ViewBag.msg.ToString().Contains("successfully"))
                    {

                        <label style="color:green">@ViewBag.msg</label>
                    }
                    else
                    {
                        <label style="color:red">@ViewBag.msg</label>
                    }
                }
                else
                {
                    <label style="color:red">@ViewBag.msg</label>
                }


                <h3 class="formgheader">Change Password</h3>
                <form>
                    @*<div class="form-group siderbarlgnform">
                <input type="text" class="form-control formblock" id="email" value="Current Password"
                       name="email">
            </div>*@
                    <div class="form-group siderbarlgnform" style="display:none">
                        @*<input type="text" class="form-control formblock" id="pwd" value="Create Password" name="pwd">*@
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control formblock", @placeholder = "Enter the User Name" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })



                    </div>
                    <div class="form-group siderbarlgnform">
                        @*<input type="text" class="form-control formblock" id="pwd" value="Create Password" name="pwd">*@
                        @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control formblock", @placeholder = "Enter Old Password" } })
                        @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })



                    </div>
                    <div class="form-group siderbarlgnform">
                        @*<input type="text" class="form-control formblock" id="pwd" value="Create Password" name="pwd">*@
                        @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control formblock", @placeholder = "New Password" } })
                        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })

                        <span style="padding:0px 13px;font-size:10px;color:gray;">
                            The password contains alphanumeric and should have Minimum length 6. It does not allow special characters.
                        </span>

                    </div>
                    <div class="form-group siderbarlgnform">
                        @*<input type="text" class="form-control formblock" id="pwd" value="Confirm Password" name="pwd">*@
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control formblock", @placeholder = "Confirm Password" } })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="SendOtpBtn">
                        <button type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}


