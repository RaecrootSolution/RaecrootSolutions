@model ICSI_Event.Models.StallNumber
@{
    ViewBag.Title = "StallNumber";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    string Msg = ViewBag.Message;
}

<div class="contain-all">
    <div class="container form-field">
        <div class="addTrainingStructure paymentStructure">
            <h4 class="">Stall Number </h4>
        </div>
        @if (Msg != null)
        {
        if (Msg.Contains("successfully"))
        {
            <div>
                <p class="text-success" style="color:green">
                    @ViewBag.Message
                </p>
            </div>
        }
        else

        {
            <div>
                <p class="text-danger">
                    @ViewBag.Message
                </p>
            </div>
        }
        }

       
            @using (Html.BeginForm("StallNumber", "Home"))
            {
                @Html.AntiForgeryToken()
                <div class="form-group row">
                    <label class="control-label col-md-4 col-sm-8">Stall Number*</label>
                    <div class="col-sm-12 col-md-4">
                        @Html.EditorFor(model => model.StallNo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.StallNo, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group row">
                    <label class="control-label col-md-4 col-sm-8">Stall Description*</label>
                    <div class="col-sm-12 col-md-4">
                        @Html.EditorFor(model => model.StallDescription, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.StallDescription, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="control-label col-md-4 col-sm-8">Stall Amount*</label>
                    <div class="col-sm-12 col-md-4">
                        @Html.EditorFor(model => model.StallAmount, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.StallAmount, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group row">
                    <label class="control-label col-md-4 col-sm-8"> </label>
                    <div class="col-sm-12 col-md-4">
                        <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#message"> Submit </button>
                    </div>
                </div>




            }

        </div>
</div>