@model ICSI_Event.Models.Login
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLoginDiary.cshtml";
}


<div class="container-all">
    <div class="container form-field">
        <div>
            <p class="text-danger">
                @ViewBag.Message
            </p>
        </div>
        @using (Html.BeginForm("Index", "Home"))
        {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="email">User Id:</label>
            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
        <div class="mt"></div>
        <div class="form-group">
            <label for="pwd">Password:</label>
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            @*<p class="small"><a href="forgot-password.html">Forgot Password ?</a></p>*@
        </div>

        <div class="form-group text-left">


            @*<div class="submitbtn">
                <input type="submit" value="Login" />
            </div>

            <div class="text-danger">
                @ViewBag.Message

            </div>*@
            @*<button type="button" class="btn btn-primary" onclick="window.location.href = 'StallRegistration.html'">Submit</button>*@

            <button type="submit" class="btn btn-primary">Submit</button>


            <p> @Html.ActionLink("Register Now", "StallRegistration")</p>


            @*<p> <a class="fontBold" href="#">Register Now</a></p>*@
        </div>
        }
    </div>
</div>

