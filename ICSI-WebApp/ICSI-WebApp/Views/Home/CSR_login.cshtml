<style type="text/css">
    .homepg-bg {
        width: 100%;
        height: auto;
        min-height: 520px;
        background: url("../../Content/CSR/Images/home-bg_old.jpg") no-repeat fixed center;
        background-size: cover;
        padding: 50px 0 20px;
        margin: -55px auto -25px auto;
    }

    .home-login-box {
        width: 100%;
        max-width: 550px;
        height: auto;
        min-height: 300px;
