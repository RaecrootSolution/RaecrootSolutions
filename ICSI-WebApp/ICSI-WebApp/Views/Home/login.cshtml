        @*<form class="home-form">*@
        @using (Html.BeginForm("login", "Home", FormMethod.Post, new { @id = "loginform", @class = "home-form" }))
        {
            <div class="form-group">
                <label id="lblMessage" style="font-weight:normal; color:red">@ViewBag.Message</label>
