@model ICSI_eCSIN.Models.Forgotpassword

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    #ui-datepicker-div {
        background: #fff;
        border: #ccc 1px solid;
        padding: 10px;
    }
</style>

<script type="text/javascript">

    $(document).ready(function () {
        $('#DOB').datepicker({
            dateFormat: "dd/mm/yy",
            changeMonth: true,
            changeYear: true,
            yearRange: "-90:+0"
        });

    });

</script>
@*<script type="text/javascript">
        $(function () {
            $('#DOB').datepicker();
        });
    </script>*@




<div class="container">
    <div id="loginformblock">
        <!----<div class="card loginformRegistrn">-->
        <h3 class="formgheader">Forgot Password</h3>

        @using (Html.BeginForm("Forgotpassword", "Home"))
        {
            @Html.AntiForgeryToken()

            <p class="ForgotPwrdFirstPare">Please input your details as given below to generate eCSIN credentials.</p>
            <p class="ForgotPwrdSecondPare">These credentials will be sent to you at email ID registered with ICSI.</p>
            @*<p class="ForgotPwrdSecondPare">These credentials will be sent you through email and sms that is registered with ICSI</p>*@
            <div class="form-group siderbarlgnform">
                <!---- <input type="text" class="form-control formblock" id="email"
            value="Membership Number (MRN)" name="email">-->
                @Html.EditorFor(model => model.MemmbershipNumber, new { htmlAttributes = new { @class = "form-control formblock ", @placeholder = "Membership Number (ex : A1234/F1234)" } })
                @Html.ValidationMessageFor(model => model.MemmbershipNumber, "", new { @class = "text-danger" })
            </div>
            <div class="form-group siderbarlgnform">
                <!--<input type="text" class="form-control formblock" id="pwd" value="Date of Birth" name="pwd">-->
                @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { Id = "DOB", @class = "form-control formblock", @placeholder = "DOB(DD/MM/YYYY)", @readonly = "true" } })
                @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })

            </div>


            @*<div class="form-group siderbarlgnform">
                @Html.EditorFor(model => model.YearOfEnrolment, new { htmlAttributes = new { @class = "form-control formblock", @placeholder = "YearOfEnrolment" } })
                @Html.ValidationMessageFor(model => model.YearOfEnrolment, "", new { @class = "text-danger", })
            </div>*@
            <div class="submitbtn">
                <input type="submit" value="Submit" />
            </div>
            <div class="text-danger">
                @if (ViewBag.msg != null)
                {
                    @ViewBag.msg <p>To change / update the email and mobile number, please <a href="https://www.icsi.in/student/Home/Login/tabid/140/Default.aspx?returnurl=%2fstudent%2fdefault.aspx" target="_blank">Click Here</a></p>
                }
                else
                {                  
                        @ViewBag.msg1 
                }


            </div>
        }
    </div>
</div>





