                    //        $("#DropDown").append($('<option></option>').val(value.ID).html(value.WEB_APP_NAME_TX))
                    //    })
                    //}
                    // if (Id == if (Id == "3") {
                    //    $.each($.parseJSON(result), function (i, value) {
                    //        $("#DropDown").append($('<option></option>').val(value.ID).html(value.MODULE_NAME_TX))
                    //    })
