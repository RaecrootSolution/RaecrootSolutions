                    //        $("#DropDown").append($('<option></option>').val(value.ID).html(value.Screen_Name))
                    //    })
                    //}

                        //$.each($.parseJSON(result), function (i, value) {
                        //    $("#DropDown").append($('<option></option>').val(value.Value).html(value.Text))
